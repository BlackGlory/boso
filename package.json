{
  "name": "extra-runnable",
  "version": "3.0.1",
  "description": "The Runnable and Runner in JavaScript/Typescript.",
  "keywords": [],
  "type": "module",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "sideEffects": true,
  "files": [
    "src/**/*.js",
    "src/**/*.js.map",
    "src/**/*.d.ts"
  ],
  "repository": "git@github.com:BlackGlory/extra-runnable.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prepare": "ts-patch install -s",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --config jest.config.js",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --coverage --config jest.config.js",
    "prepublishOnly": "run-s prepare clean build",
    "clean": "rimraf 'src/**/*.js' 'src/**/*.js.map' 'src/**/*.d.ts'",
    "build": "tsc --project tsconfig.build.json",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s prepare clean lint build test",
      "commit-msg": "commitlint --config commitlint.config.cjs --env HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/jest-resolver": "^0.3.0",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/jest": "^29.2.4",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "extra-filesystem": "^0.4.8",
    "husky": "^4.3.8",
    "jest": "^29.3.1",
    "jest-resolve": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "return-style": "^1.0.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "ts-patch": "^2.1.0",
    "typescript": "^4.7.3",
    "typescript-transform-paths": "^3.4.4"
  },
  "dependencies": {
    "@blackglory/prelude": "^0.1.8",
    "@blackglory/wait-for": "^0.6.0",
    "@delight-rpc/child-process": "^0.4.6",
    "@delight-rpc/worker-threads": "^4.2.0",
    "delight-rpc": "^4.3.2",
    "extra-abort": "^0.2.0",
    "extra-fsm": "^0.1.1",
    "extra-promise": "^4.4.0",
    "extra-proxy": "^0.3.0"
  }
}
